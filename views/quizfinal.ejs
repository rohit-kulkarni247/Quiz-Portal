    <script>
        setInterval(function abcd(){
            localStorage.endTime=+new Date+30000;
            var wait=setTimeout("document.xyz.submit();",(localStorage.endTime-new Date)/1000);
        },30000);
        
        var interval = 30000;
        
        
        
        function reset()
        {
            localStorage.endTime = +new Date + interval;
            
        }
        
        if(!localStorage.endTime)
        {
            reset();
        }
        
        setInterval(function()
        {
            var remaining = localStorage.endTime - new Date;
            if( remaining >= 0 )
            {
                $('#countdown').text( Math.floor( remaining / 1000 ) );
            } else
            {
                reset();
                
            }
        }, 100);
        
        
        
        
        </script>
